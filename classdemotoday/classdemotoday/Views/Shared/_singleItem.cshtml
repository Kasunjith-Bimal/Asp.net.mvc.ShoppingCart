@model classdemotoday.Areas.Common.Models.ItemDetail

<style>
    .singleItemBlock:hover {
        border: 1px #CCC solid !important;
    }

    .singleItemBlock {
        text-align: center !important;
        border: 1px #f2f2f2 solid !important;
        padding: 10px;
        max-height:1000px;
        border-radius: 5px;
    }

        .singleItemBlock .itemName {
            height: 20px !important;
            max-height: 20px;
            overflow-y: hidden;
            overflow-x: hidden;
        }

        .singleItemBlock .itemDescription {
            height: 50px !important;
            max-height: 50px;
            overflow-y: hidden;
            overflow-x: hidden;
        }

        .singleItemBlock .itemPrice {
            height: 40px !important;
            max-height: 40px;
            overflow-y: hidden;
            overflow-x: hidden;
        }

        .singleItemBlock .itemAddToCart {
            height: 40px !important;
            max-height: 40px;
        }
</style>

<div class="singleItemBlock">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

        <img src="@ViewBag.ImageUrl@Model.ImageURL" width="100%" />
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <span class="glyphicon glyphicon-bookmark"></span>    @Model.ItemCode
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 itemName">
        <b>@Model.Name</b>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 itemDescription">
        @Model.Description
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 itemPrice">
        @Model.UnitPrice
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 itemPrice">
        @using (Html.BeginForm("MoreDetails", "Home", FormMethod.Get))
        {
            <input type="hidden" value="@Model.Id" name="Itemid" id="Itemid" />
            <button type="submit" value="More Details" class="btn btn-info">
                <span class="glyphicon glyphicon-move" aria-hidden="true"></span> More Details
            </button>

        }

    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 itemAddToCart">
        
           
            @using (Html.BeginForm("AddtoCart", "Cart", FormMethod.Post))
            {
                <input type="hidden" value="@Model.Id" name="Itemid" id="Itemid" />
                <button type="submit" value="ADD TO CART" class="btn btn-info">
                    <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> ADD TO CART
                </button>

            }
          
       
    </div>


</div>